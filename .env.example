# =====================================================
# NandyFood Environment Configuration
# =====================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to version control!
# =====================================================

# =====================================================
# SUPABASE CONFIGURATION
# =====================================================
# Get these from: https://app.supabase.com/project/_/settings/api

SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# =====================================================
# STRIPE PAYMENT CONFIGURATION
# =====================================================
# Get these from: https://dashboard.stripe.com/apikeys
# Use test keys for development, live keys for production

# Test Keys (Development)
PAYSTACK_PUBLIC_KEY=pk_test_your-test-public-key
PAYSTACK_SECRET_KEY=sk_test_your-test-secret-key

# Live Keys (Production)
PAYSTACK_PUBLIC_KEY_LIVE=pk_live_your-live-public-key
PAYSTACK_SECRET_KEY_LIVE=sk_live_your-live-secret-key

# Current Environment (test or live)
PAYSTACK_ENVIRONMENT=test

# =====================================================
# GOOGLE MAPS CONFIGURATION
# =====================================================
# Get from: https://console.cloud.google.com/google/maps-apis/credentials

GOOGLE_MAPS_API_KEY=your-google-maps-api-key


# =====================================================
# APP CONFIGURATION
# =====================================================

APP_NAME=NandyFood
APP_VERSION=1.0.0
ENVIRONMENT=development  # development, staging, production

# =====================================================
# FEATURE FLAGS
# =====================================================

ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_REAL_TIME_TRACKING=true
ENABLE_SOCIAL_LOGIN=true
ENABLE_PROMO_CODES=true
ENABLE_ANALYTICS=false

# =====================================================
# THIRD-PARTY SERVICES (Optional)
# =====================================================

# Sentry (Error Tracking)
SENTRY_DSN=your-sentry-dsn

# Analytics
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X
MIXPANEL_TOKEN=your-mixpanel-token

# SMS Service (for OTP)
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_PHONE_NUMBER=+1234567890

# Email Service
SENDGRID_API_KEY=your-sendgrid-key
FROM_EMAIL=noreply@nandyfood.com

# =====================================================
# BUSINESS CONFIGURATION
# =====================================================

# Tax rate (as decimal, e.g., 0.08 for 8%)
DEFAULT_TAX_RATE=0.08

# Delivery settings
DEFAULT_DELIVERY_FEE=2.99
FREE_DELIVERY_THRESHOLD=25.00
MAX_DELIVERY_RADIUS_KM=10.0

# Order settings
MIN_ORDER_AMOUNT=10.00
DEFAULT_PREP_TIME_MINUTES=30

# =====================================================
# DEVELOPMENT TOOLS
# =====================================================

# Enable debug logging
DEBUG_MODE=true
LOG_LEVEL=info  # debug, info, warning, error

# Mock data for testing
USE_MOCK_PAYMENT=false
USE_MOCK_GPS=false
USE_MOCK_NOTIFICATIONS=false

# =====================================================
# NOTES
# =====================================================
# 1. After creating .env file, add it to .gitignore
# 2. For Flutter, you may need to use flutter_dotenv package
# 3. Some values may need to be added to native config files
#    (AndroidManifest.xml, Info.plist)
# 4. Regenerate after changing environment variables:
#    flutter clean && flutter pub get
# =====================================================
