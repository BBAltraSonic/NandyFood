# =====================================================
# NandyFood Environment Configuration
# =====================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to version control!
# =====================================================

# =====================================================
# SUPABASE CONFIGURATION
# =====================================================
# Get these from: https://app.supabase.com/project/_/settings/api

SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# =====================================================
# PAYFAST PAYMENT CONFIGURATION (South Africa)
# =====================================================
# Get these from: https://www.payfast.co.za/
# Use sandbox credentials for development, live for production

# Merchant Credentials
PAYFAST_MERCHANT_ID=your-merchant-id
PAYFAST_MERCHANT_KEY=your-merchant-key
PAYFAST_PASSPHRASE=your-passphrase

# Environment (sandbox or live)
PAYFAST_MODE=sandbox

# Payment URLs (update with your actual domain)
PAYFAST_RETURN_URL=https://nandyfood.com/payment/success
PAYFAST_CANCEL_URL=https://nandyfood.com/payment/cancel
PAYFAST_NOTIFY_URL=https://nandyfood.com/api/payment/webhook

# Sandbox Test Credentials (for development)
# Merchant ID: 10000100
# Merchant Key: 46f0cd694581a
# Passphrase: Use any passphrase for testing

# =====================================================
# GOOGLE MAPS CONFIGURATION
# =====================================================
# Get from: https://console.cloud.google.com/google/maps-apis/credentials

GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# =====================================================
# GOOGLE SIGN-IN CONFIGURATION
# =====================================================
# Get from: https://console.cloud.google.com/apis/credentials
# Create OAuth 2.0 Client ID for Web Application
# Use the Web client ID for cross-platform compatibility (iOS, Android, Web)

GOOGLE_SERVER_CLIENT_ID=your-google-server-client-id.apps.googleusercontent.com


# =====================================================
# APP CONFIGURATION
# =====================================================

APP_NAME=NandyFood
APP_VERSION=1.0.0
ENVIRONMENT=development  # development, staging, production

# =====================================================
# FEATURE FLAGS
# =====================================================

ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_REAL_TIME_TRACKING=true
ENABLE_SOCIAL_LOGIN=true
ENABLE_PROMO_CODES=true
ENABLE_ANALYTICS=false

# =====================================================
# PAYMENT METHOD CONFIGURATION
# =====================================================

# Enable/disable payment methods
ENABLE_CASH_ON_DELIVERY=true
ENABLE_PAYFAST=false  # Set to true once PayFast is configured
ENABLE_CARD_PAYMENT=false
ENABLE_DIGITAL_WALLET=false

# PayFast configuration
PAYFAST_SANDBOX=true

# =====================================================
# THIRD-PARTY SERVICES (Optional)
# =====================================================

# Sentry (Error Tracking)
SENTRY_DSN=your-sentry-dsn

# Analytics
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X
MIXPANEL_TOKEN=your-mixpanel-token

# SMS Service (for OTP)
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_PHONE_NUMBER=+1234567890

# Email Service
SENDGRID_API_KEY=your-sendgrid-key
FROM_EMAIL=noreply@nandyfood.com

# =====================================================
# BUSINESS CONFIGURATION
# =====================================================

# Tax rate (as decimal, e.g., 0.08 for 8%)
DEFAULT_TAX_RATE=0.08

# Delivery settings
DEFAULT_DELIVERY_FEE=2.99
FREE_DELIVERY_THRESHOLD=25.00
MAX_DELIVERY_RADIUS_KM=10.0

# Order settings
MIN_ORDER_AMOUNT=10.00
DEFAULT_PREP_TIME_MINUTES=30

# =====================================================
# DEVELOPMENT TOOLS
# =====================================================

# Enable debug logging
DEBUG_MODE=true
LOG_LEVEL=info  # debug, info, warning, error

# Mock data for testing
USE_MOCK_PAYMENT=false
USE_MOCK_GPS=false
USE_MOCK_NOTIFICATIONS=false

# =====================================================
# NOTES
# =====================================================
# 1. After creating .env file, add it to .gitignore
# 2. For Flutter, you may need to use flutter_dotenv package
# 3. Some values may need to be added to native config files
#    (AndroidManifest.xml, Info.plist)
# 4. Regenerate after changing environment variables:
#    flutter clean && flutter pub get
# =====================================================
