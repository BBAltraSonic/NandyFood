# =====================================================
# NandyFood Staging Environment Configuration
# =====================================================
# Copy this file to .env.staging and fill in actual values
# Use for testing in staging environment
# =====================================================

# =====================================================
# ENVIRONMENT
# =====================================================
ENVIRONMENT=staging

# =====================================================
# SUPABASE CONFIGURATION (Staging)
# =====================================================
SUPABASE_URL_STAGING=https://your-staging-project.supabase.co
SUPABASE_ANON_KEY_STAGING=your-staging-anon-key

# Keep development URL as fallback (replace with your actual dev values)
SUPABASE_URL=your-development-project.supabase.co
SUPABASE_ANON_KEY=your-development-anon-key

# =====================================================
# PAYMENT GATEWAY - PAYFAST
# =====================================================

# PayFast (Sandbox Mode for Staging)
# Use PayFast sandbox credentials for testing
PAYFAST_MERCHANT_ID=10000100
PAYFAST_MERCHANT_KEY=46f0cd694581a
PAYFAST_PASSPHRASE=your-test-passphrase
PAYFAST_MODE=sandbox

# PayFast URLs
PAYFAST_RETURN_URL=https://staging.nandyfood.com/payment/success
PAYFAST_CANCEL_URL=https://staging.nandyfood.com/payment/cancel
PAYFAST_NOTIFY_URL=https://staging.nandyfood.com/api/payment/webhook

# =====================================================
# GOOGLE MAPS CONFIGURATION
# =====================================================
GOOGLE_MAPS_API_KEY=your-google-maps-api-key-staging

# =====================================================
# FEATURE FLAGS (Staging - Test New Features)
# =====================================================
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_REAL_TIME_TRACKING=true
ENABLE_SOCIAL_LOGIN=true
ENABLE_PROMO_CODES=true
ENABLE_ANALYTICS=true
ENABLE_SAVED_CARDS=true
ENABLE_SCHEDULED_ORDERS=true

# =====================================================
# THIRD-PARTY SERVICES (Optional - Test Mode)
# =====================================================
SENTRY_DSN=your-sentry-dsn-staging
GOOGLE_ANALYTICS_ID=UA-STAGING-X

# =====================================================
# BUSINESS CONFIGURATION (Staging)
# =====================================================
DEFAULT_TAX_RATE=0.08
DEFAULT_DELIVERY_FEE=2.99
FREE_DELIVERY_THRESHOLD=25.00
MAX_DELIVERY_RADIUS_KM=10.0
MIN_ORDER_AMOUNT=10.00
DEFAULT_PREP_TIME_MINUTES=30

# =====================================================
# DEVELOPMENT TOOLS (Staging)
# =====================================================
DEBUG_MODE=true
LOG_LEVEL=debug
USE_MOCK_PAYMENT=false
